<!-- item_task.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:cardBackgroundColor="@color/purple_200"
        android:cardElevation="10dp"
        android:contentPadding="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_constraintBottom_toTopOf="@+id/textView3"
                android:layout_constraintVertical_bias="0.1"
                android:layout_constraintStart_toStartOf="parent"
                android:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:text="Task name here"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="84dp"
                android:layout_height="20dp"
                android:layout_constraintBottom_toTopOf="@+id/textView4"
                android:layout_constraintVertical_bias="0.1"
                android:layout_constraintTop_toBottomOf="@+id/textView2"
                android:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="9dp"
                android:text="Date here"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_constraintBottom_toTopOf="@+id/textView5"
                android:layout_constraintVertical_bias="0.1"
                android:layout_constraintTop_toBottomOf="@+id/textView3"
                android:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:text="Start time here"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_constraintBottom_toTopOf="@+id/textView6"
                android:layout_constraintVertical_bias="0.1"
                android:layout_constraintTop_toBottomOf="@+id/textView4"
                android:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="16dp"
                android:text="End time here"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_constraintBottom_toTopOf="@+id/btnDelete"
                android:layout_constraintVertical_bias="0.1"
                android:layout_constraintTop_toBottomOf="@+id/textView5"
                android:layout_constraintStart_toStartOf="parent"
                android:text="Description here"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_constraintVertical_bias="0.1"
                android:layout_constraintTop_toBottomOf="@+id/textView6"
                android:layout_constraintBottom_toBottomOf="parent"
                android:layout_constraintStart_toStartOf="parent"
                android:text="Delete"
                tools:layout_editor_absoluteX="291dp"
                tools:layout_editor_absoluteY="27dp" />

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_constraintVertical_bias="0.9"
                android:layout_constraintBottom_toBottomOf="parent"
                android:layout_constraintStart_toStartOf="parent"
                android:layout_constraintTop_toTopOf="parent"
                android:text="Edit"
                tools:layout_editor_absoluteX="293dp"
                tools:layout_editor_absoluteY="88dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
